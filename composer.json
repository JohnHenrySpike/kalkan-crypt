{
    "name": "johnhenryspike/kalkancrypt",
    "description": "KalkanCrypt wrapper",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "KalkanCrypt\\": "src/"
        }
    },
    "authors": [
        {
            "name": "JohnHenrySpike",
            "email": "JohnHenrySpike@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "ext-kalkancrypt": "^1.1.1",
        "ext-openssl": "*",
        "ext-dom": "*",
        "ext-soap": "*"
    },
    "config":{
        "platform": {
            "ext-kalkancrypt": "1.1.1"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10"
    },
    "scripts": {
        "test": "phpunit --testdox --display-errors tests/KalkanCrypt",
        "sys_has_reg_certs": "phpunit --testdox --display-errors tests/certs_registered"
    }
}